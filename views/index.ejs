<!DOCTYPE html>
<html>

  <head>
    <title>ProfileApp</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <%- include('header',{user_name: user_name, user_id: user_id}) %>
  </head>

  <body>
    <main role="main" class="container">
      <div class="border-bottom mt-5 mb-5">
        <h1>
          <%= title %>
        </h1>
      </div>

      <% if(user_name) { %>
        <div class="wrapper">
          <form action="/" method="post">
            <h2>
              <%= user_name %>
            </h2>
            <h5>Follows<a href="/users/<%=user_id %>/follows">
                <%=followed_id %>
              </a></h5>
            <h5>Followers<a href="/users/<%=user_id %>/followers">
                <%=following_id %>
              </a></h5>
            <h5><a href="/users/<%=user_id %>">View My Profile</a></h5>
            <h5>Introduction</h5><br>
            <p><textarea name="content" cols="30" rows="5"></textarea></p>
            <input class="btn btn-primary" type="submit" value="Post" />
            <br>
            <br>
            <textarea readonly cols="50" rows="10"><%= contentList[0].content %></textarea>
          </form>
          <% }else{ %>
            <form action="/signup" method="get" class="task-form">
              <input class="btn btn-primary" type="submit" value="Sign up" />
            </form>
            <% } %>
        </div>
    </main>
    <%- include('partials/bootstrap.ejs'); %>
  </body>

</html>