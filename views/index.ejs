<!DOCTYPE html>
<html>

  <head>
    <title>ProfileApp</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/index.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <%- include('header',{user_name: user_name, user_id: user_id}) %>
  </head>

  <body>
    <main role="main" class="container">
      <div class="border-bottom mt-5 mb-5">
        <div class="row">
          <div class="col-sm-6">
            <h1>
              <%= title %>
            </h1>

            <% if(user_name) { %>
              <form action="/" method="post">
                <h2>
                  <%= user_name %>
                </h2>
                <h5>Follows<a href="/users/<%=user_id %>/follows">
                    <%=followed_id %>
                  </a></h5>
                <h5>Followers<a href="/users/<%=user_id %>/followers">
                    <%=following_id %>
                  </a></h5>
                <h5><a href="/users/<%=user_id %>">View My Profile</a></h5>
                <h5>Introduction</h5><br>
                <p><textarea class="textarea" name="content" cols="30" rows="5"></textarea></p>
                <input class="btn btn-primary" type="submit" value="Post" />
                <br>
                <br>
          </div>
          <div class="col-sm-6">
            <textarea readonly class="textarea" cols="30" rows="18"><%= contentList[user_id - 1].content %></textarea>
          </div>
          </form>
          <% }else{ %>
            <form action="/signup" method="get" class="task-form">
              <input class="btn btn-primary" type="submit" value="Sign up" />
            </form>
            <% } %>
        </div>
      </div>
    </main>
    <%- include('partials/bootstrap.ejs'); %>
  </body>

</html>