<!DOCTYPE html>
<html lang="ja">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <%- include('header',{user_name: user_name}) %>
    <title>Login</title>
  </head>

  <body>

    <main role="main" class="container">
      <div class="border-bottom mt-5 mb-5">
        <h1>Login</h1>
      </div>
      <div class="justify-content-center">
        <form method="POST" action="/login" class="col-sm-8">
          <div class="form-group">
            <label for="username" class="col-sm-10 col-form-label">
              <h4>Username</h4>
            </label>
            <input required type="text" id="username" name="username" class="col-sm-6 form-control" />
            <br>
          </div>
          <div class="form-group">
            <label for="password" class="col-sm-2 col-form-label">
              <h4>Password</h4>
            </label>
            <input required type="password" id="password" name="password" class="col-sm-6 form-control" />
            <br>
          </div>
          <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
              <input type="submit" class="btn btn-primary" value="Login" />
            </div>
          </div>
          <% if (message && message.length !== 0) { %>
          <div class="alert alert-danger"><%= message %></div>
          <% } %>
        </form>
      </div>
    </main>
    <%- include('partials/bootstrap.ejs'); %>
  </body>

</html>